<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BareBear_paint_player"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        x:Class="BareBear_paint_player.MainWindow"
        mc:Ignorable="d"
        Title="BareBear paint player" 
        Height="900" Width="1600"
        d:Height="450" d:Width="900"
        WindowState="Maximized">

    <!--Main Application Layout-->
    <Grid Background="#F8262537">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RadioButton
            Name="VersionButton"
            Grid.Column="1" Grid.Row="1" 
            Content="Draw" 
            HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" 
            Background="#E552B9FE" Foreground="White"
            BorderBrush="#00707070"/>

        <RadioButton
            Name="RemoveButton"
            Grid.Column="1" Grid.Row="1" 
            Content="Remove" 
            HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" 
            Background="#E552B9FE" Foreground="White"
            BorderBrush="#00707070"/>

        <StackPanel Margin="0,5,0,0" Grid.RowSpan="2" Grid.Row="1">
            <RadioButton Content="Drawing" HorizontalAlignment="Left" Margin="8" Grid.Row="1" VerticalAlignment="Top" Foreground="White" IsChecked="True"/>
            <RadioButton Content="Branches" HorizontalAlignment="Left" Margin="8" Grid.Row="1" VerticalAlignment="Top" Foreground="White" IsChecked="True"/>
        </StackPanel>

        <StackPanel 
            x:Name="HistoryStackPanel"
            Margin="2,2,2,2"
            Grid.RowSpan="1" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
            HorizontalAlignment="Left" VerticalAlignment="Center"
            Background="#33000000">
            
            <Button HorizontalAlignment="Left" Margin="4"  VerticalAlignment="Top" Foreground="{x:Null}" Background="#FF4FFF90">
                <Image Width="25" Height="25" 
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       OpacityMask="#FF4FFF90" Source="/Arrow.png"/>
            </Button>
        </StackPanel>
        <Grid Margin="0,43,0,43" Grid.RowSpan="3"/>
        
        <Canvas 
            MouseDown="DrawingCanvas_MouseDown"
            MouseMove="DrawingCanvas_MouseMove"
            x:Name="DrawingCanvas"
            Grid.Column="2" Grid.Row="1" Background="White"/>
        <Slider x:Name="ThicknessSlider" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="0,175,0,0" Grid.Row="1" VerticalAlignment="Top" Width="60" Minimum="1" Maximum="5" Value="1" Foreground="{x:Null}"/>
        <Label Grid.Column="1" Content="Size" HorizontalAlignment="Left" Margin="0,150,0,0" Grid.Row="1" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFFEC04A"/>
        <Label Name="SizeDisplay" Grid.Column="1" Content="{Binding Value, ElementName=ThicknessSlider, StringFormat={}{0:#.00}}" HorizontalAlignment="Left" Margin="60,170,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Center" Background="{x:Null}" Foreground="White" VerticalContentAlignment="Center"/>
    
    </Grid>
</Window>
