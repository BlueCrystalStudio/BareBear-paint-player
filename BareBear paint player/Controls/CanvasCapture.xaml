<UserControl x:Class="BareBear_paint_player.Controls.CanvasCapture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BareBear_paint_player.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Name="CaptureButton" Background="Transparent" Height="30" Width="25" Content="10" Padding="0,0,0,0" Click="CaptureButton_Click">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0,3" MappingMode="Absolute">
                    <GradientStop Color="#FF2E2E2E" Offset="0"/>
                    <GradientStop Color="#FF559CE4" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
    </Grid>
</UserControl>
